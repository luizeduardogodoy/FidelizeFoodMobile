<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.luizeduardo.fidelizefood.CarimboActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="Carimbo"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="Informe o cÃ³digo do Cliente:"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/editCPFCarimbo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="CPF"
        android:inputType="number" />

    <CheckBox
        android:id="@+id/checkPermiteMaisCarimbo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Permitir mais de um carimbo por dia?" />

    <Button
        android:id="@+id/btnCarimbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="carimbar"
        android:text="Salvar"
        android:layout_gravity="center"/>
</LinearLayout>
